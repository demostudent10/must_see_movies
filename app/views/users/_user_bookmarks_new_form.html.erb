<%= form_with(model: @bookmark, local: true) do |f| %>

  <%= f.hidden_field :user_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :movie_id %>
    <%= f.select :movie_id, options_from_collection_for_select(Movie.all, :id, :to_s, @bookmark.movie_id), {}, class: "form-control" %>
  </div>

  <%= f.submit "Create bookmark", class: "btn btn-block btn-outline-secondary" %>
<% end %>
